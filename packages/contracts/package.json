{
  "name": "@ethathon/contracts",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "clean": "pnpm hardhat clean",
    "compile": "pnpm hardhat compile",
    "dev": "pnpm run build && pnpm run deploy",
    "build": "pnpm clean && pnpm compile",
    "start": "pnpm run deploy",
    "types": "pnpm typechain --target=ethers-v5 './artifacts/contracts/**/+([a-zA-Z0-9_]).json' --out-dir './typechain-types'",
    "lint": "prettier . --check && pnpm eslint",
    "lint:fix": "prettier . --write && pnpm eslint --fix",
    "eslint": "eslint . --ext .js,.ts",
    "solhint": "solhint 'contracts/**/*.sol'",
    "deploy": "pnpm hardhat node --export './deployments/1337.json' --write true",
    "deploy:mumbai": "pnpm hardhat deploy --network mumbai --export './deployments/80001.json' --write true",
    "deploy:goerli": "pnpm hardhat deploy --network goerli --export './deployments/5.json' --write true",
    "verify:mumbai": "source .env && pnpm hardhat etherscan-verify --network mumbai --api-key $POLYGONSCAN_API_KEY",
    "verify:goerli": "pnpm hardhat etherscan-verify --network goerli"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.3",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.2",
    "hardhat-deploy": "^0.11.20",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.8.4"
  }
}
