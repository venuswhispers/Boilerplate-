{
  "name": "@inkathon/monorepo",
  "description": "Full-Stack DApp Boilerplate for ink! Smart Contracts",
  "homepage": "https://inkathon.xyz",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scio-labs/inkathon"
  },
  "private": true,
  "workspaces": [
    "frontend",
    "contracts"
  ],
  "engines": {
    "node": ">=16",
    "pnpm": "8"
  },
  "scripts": {
    "dev": "pnpm run --filter frontend dev",
    "build": "pnpm run --filter frontend build",
    "start": "pnpm run --filter frontend start",
    "lint": "pnpm run --filter frontend lint",
    "lint:fix": "pnpm run --filter frontend lint:fix",
    "lint:format": "pnpm run --filter frontend lint:format"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm run lint:fix"
    ],
    "*.{json,md,mdx,html,css,yml,yaml}": [
      "pnpm run lint:format"
    ]
  },
  "devDependencies": {
    "lint-staged": "^14.0.1",
    "next": "^13.5.4",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2"
  }
}
