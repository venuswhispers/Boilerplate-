{
  "name": "@inkathon/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --filter frontend dev",
    "build": "pnpm run --filter frontend build",
    "start": "pnpm run --filter frontend start",
    "lint": "pnpm run --filter frontend lint",
    "lint:fix": "pnpm run --filter frontend lint:fix",
    "prepare": "husky install"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "next": "^13.0.0"
      }
    }
  },
  "devDependencies": {
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "typescript": "^4.9.3",
    "next": "^13.0.4"
  }
}
