{
  "name": "@inkathon/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=...^contracts",
    "build": "turbo run build --filter=...^contracts",
    "start": "turbo run start --filter=...^contracts",
    "lint": "turbo run lint --filter=...^contracts",
    "lint:fix": "turbo run lint:fix --filter=...^contracts",
    "prepare": "husky install"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "next": "^13.0.0"
      }
    }
  },
  "devDependencies": {
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4",
    "next": "^13.0.3"
  }
}
