{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "artifacts/**"]
    },
    "@ethathon/frontend#build": {
      "dependsOn": ["@ethathon/hardhat#build"],
      "outputs": [".next/**", "artifacts/**"]
    },
    "@ethathon/frontend#dev": {
      "dependsOn": ["@ethathon/hardhat#build"],
      "outputs": [".next/**", "artifacts/**"]
    },
    "format": {
      "dependsOn": ["^format"]
    }
  },
  "globalDependencies": [
    ".env",
    ".env.local",
    "tsconfig.json",
    ".eslintrc.json",
    ".prettierrc.json",
    ".solhint.json"
  ]
}
